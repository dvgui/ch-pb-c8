<%- include('./header')-%>

<body>
    <% if(products.length > 0){ %>
        <div class="table-responsive">
            <table class="table table-dark">
                <tr> <th>Name</th> <th>Price</th> <th>Image</th> </tr>
                <%products.forEach(function(product) {%>
                <tr>
                    <td><%=product.title%></td>
                    <td><%=product.price%></td>
                    <td><img class="img-responsive" src="<%=product.thumbnail%>" alt="<%=product.name%>"></td>
                </tr>
                <%});%>
            </table>
        </div>
    <% } else{ %>
        <h3 class="alert alert-danger">no products found</h1>
    <% } %>
    <a href="/" class="btn btn-primary mt-3"><p style="color: white;">Back to form</p></a>
</body>
</html>